{
  "name": "vscode-port-monitor",
  "displayName": "Port Monitor",
  "description": "Monitor multiple hosts and ports with real-time status display in VS Code status bar",
  "version": "0.1.0",
  "publisher": "dkurokawa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkurokawa/vscode-port-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/dkurokawa/vscode-port-monitor/issues"
  },
  "homepage": "https://github.com/dkurokawa/vscode-port-monitor#readme",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "port",
    "monitor",
    "network",
    "status",
    "process"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Port Monitor",
      "properties": {
        "portMonitor.hosts": {
          "type": "object",
          "default": {
            "localhost": {
              "admin": 3000,
              "app": 3001,
              "user": 3002
            }
          },
          "description": "Hosts and labeled ports to monitor. Format: {\"host\": {\"label\": port}}"
        },
        "portMonitor.statusIcons": {
          "type": "object",
          "default": {
            "open": "ðŸŸ¢",
            "closed": "ðŸ”´"
          },
          "description": "Status icons for open/closed ports"
        },
        "portMonitor.intervalMs": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "description": "Monitoring interval in milliseconds"
        }
      }
    },
    "commands": [
      {
        "command": "portMonitor.refresh",
        "title": "Refresh Port Status",
        "category": "Port Monitor"
      },
      {
        "command": "portMonitor.showLog",
        "title": "Show Process Log",
        "category": "Port Monitor"
      },
      {
        "command": "portMonitor.openSettings",
        "title": "Open Settings",
        "category": "Port Monitor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile-test": "tsc -p ./tsconfig.test.json",
    "start-test-servers": "npm run compile-test && node out/test-servers.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.60.0",
    "jest": "^30.0.2",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "tcp-port-used": "^1.0.2"
  }
}
