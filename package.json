{
  "name": "vscode-port-monitor",
  "displayName": "Port Monitor",
  "description": "Monitor multiple hosts and ports with real-time status display in VS Code status bar",
  "version": "0.3.5",
  "publisher": "dkurokawa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkurokawa/vscode-port-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/dkurokawa/vscode-port-monitor/issues"
  },
  "homepage": "https://github.com/dkurokawa/vscode-port-monitor#readme",
  "engines": {
    "vscode": "^1.60.0",
    "node": ">=16.0.0 <21.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "port",
    "monitor",
    "network",
    "status",
    "process"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [],
  "contributes": {
    "configuration": {
      "title": "Port Monitor",
      "properties": {
        "portMonitor.hosts": {
          "type": "object",
          "default": {},
          "description": "Hosts and ports to monitor. Supports multiple formats: simple arrays, grouped configurations, well-known port names, and port ranges."
        },
        "portMonitor.statusIcons": {
          "type": "object",
          "default": {
            "free": "⚪️",
            "inUse": "🟢"
          },
          "description": "Status icons for free/inUse ports"
        },
        "portMonitor.portLabels": {
          "type": "object",
          "default": {},
          "description": "Port labels for pattern matching. Example: {'3000': 'frontend', '300*': 'dev-env'}"
        },
        "portMonitor.intervalMs": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "description": "Monitoring interval in milliseconds"
        },
        "portMonitor.backgroundColor": {
          "type": "string",
          "description": "Status bar background color (VS Code theme color name or hex code)"
        },
        "portMonitor.portColors": {
          "type": "object",
          "default": {},
          "description": "Background colors for specific ports. Example: {'3000': '#ffcccc', '8080': 'statusBarItem.errorBackground'}"
        },
        "portMonitor.statusBarPosition": {
          "type": "string",
          "enum": ["left", "right"],
          "default": "right",
          "description": "Status bar position (left or right)"
        }
      }
    },
    "commands": [
      {
        "command": "portMonitor.refresh",
        "title": "Refresh Port Status",
        "category": "Port Monitor"
      },
      {
        "command": "portMonitor.showLog",
        "title": "Show Process Log",
        "category": "Port Monitor"
      },
      {
        "command": "portMonitor.openSettings",
        "title": "Open Settings",
        "category": "Port Monitor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile-test": "tsc -p ./tsconfig.test.json",
    "start-test-servers": "npm run compile-test && node out/test-servers.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.4",
    "@types/vscode": "^1.60.0",
    "jest": "^30.0.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
